{
  "name": "sentinella",
  "version": "1.0.0",
  "description": "Pre-Cognitive Content Safety Platform for Live Streaming",
  "private": true,
  "workspaces": [
    "apps/extension",
    "apps/dashboard",
    "apps/backend",
    "packages/shared"
  ],
  "scripts": {
    "dev": "npm-run-all --parallel dev:backend dev:extension dev:dashboard",
    "dev:backend": "npm run dev --workspace=apps/backend",
    "dev:extension": "npm run dev --workspace=apps/extension",
    "dev:dashboard": "cd apps/dashboard && npm run dev",
    "build": "cd apps/extension && npm run build && cd ../dashboard && npm run build && cd ../backend && npm run build",
    "install:all": "npm install"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  },
  "keywords": [
    "streaming",
    "moderation",
    "safety",
    "twelve-labs",
    "amplitude",
    "browser-extension"
  ],
  "author": "",
  "license": "MIT"
}
