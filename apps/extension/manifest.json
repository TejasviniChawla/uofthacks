{
  "manifest_version": 3,
  "name": "Sentinella",
  "description": "Pre-cognitive content safety for live streaming - filter unwanted content BEFORE it reaches your screen",
  "version": "1.0.0",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Sentinella - Content Safety"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.twitch.tv/*",
        "https://twitch.tv/*",
        "https://www.youtube.com/*",
        "https://youtube.com/*"
      ],
      "js": ["demo.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ],
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "alarms"
  ],
  "host_permissions": [
    "https://www.twitch.tv/*",
    "https://twitch.tv/*",
    "https://www.youtube.com/*",
    "https://youtube.com/*",
    "http://localhost:3001/*",
    "ws://localhost:3001/*"
  ],
  "web_accessible_resources": [
    {
      "resources": ["icons/*", "*.js", "*.css"],
      "matches": ["<all_urls>"]
    }
  ]
}
