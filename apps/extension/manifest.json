{
  "manifest_version": 3,
  "name": "Sentinella - Pre-Cognitive Content Safety",
  "version": "1.0.0",
  "description": "AI-powered content safety that filters unwanted content BEFORE it reaches your screen",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "https://*.twitch.tv/*",
    "https://*.youtube.com/*",
    "http://localhost/*"
  ],
  "background": {
    "service_worker": "background/service-worker.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.twitch.tv/*",
        "https://*.youtube.com/*"
      ],
      "js": ["content/content-script.js"],
      "css": ["content/content.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup/index.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["content/*.js", "content/*.css"],
      "matches": ["https://*.twitch.tv/*", "https://*.youtube.com/*"]
    }
  ]
}
